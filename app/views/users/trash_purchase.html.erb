<div class="bod">
  <div class="col-md-10 col-sm-8 body-wrap">
<div class="set">
<div class="body-container">
<div class="body-header">
Trash - Purchase
</div>
<div class="body-content">
<div class="table-container">
<div class="header">
    List of Purchase
</div>
<table class="table">
<thead>
<tr>
<th>Grn No</th>
<th>Party</th>
<th colspan="3"><center>Actions</center></th>
</tr>
</thead>
<tbody>
<ul id = "purchase" >
<% @purchase.each do |i| %>
<tr>
<td><%= i.grn_no%></td>
<td><%= i.party%></td>
