<div class="bod">
  <div class="col-md-10 col-sm-8 body-wrap">
<div class="set">
<div class="body-container">
<div class="body-header">
Trash - Issues
</div>
<div class="body-content">
<div class="table-container">
<div class="header">
    List of Issues
</div>
<table class="table">
<thead>
<tr>
<th>Order-No</th>
<th>Slip-No</th>
<th>Issue-Date</th>
<th>Shift</th>
<th colspan="3"><center>Actions</center></th>
</tr>
</thead>
<tbody>
<ul id = "issue" >
<% @issue.each do |i| %>
<tr>
<td><%= i.order_no%></td>
<td><%= i.issue_slip_no%></td>
<td><%= i.issue_date%></td>
<td><%= i.shift%></td>
<td><%= link_to image_tag("/assets/trash1.png", height: '20', width: '20',:class=>"img-circle",:title => 'Delete', :rel => 'tooltip',:onclick=>"if (confirm('Are you sure!!!')) commentDelete(1); return false"),{:action => 'delete_trashIssue', :id => i.id }%></td>

<td><center><%= link_to      users_trash_showIssue_path(:id => i.id) ,class: "btn btn-default",:title => 'Show', :onclick => 'return openPopup(this);', :rel => 'tooltip' do%><i class="fa fa-eye"></i><%end%>
</center></td>


<td><%= link_to image_tag("/assets/restore.png", height: '20', width: '20',:class=>"img-circle",:title => 'Restore', :rel => 'tooltip',:onclick=>"if (confirm('Are you sure!!!')) commentDelete(1); return false"),{:action => 'restore_trashIssue', :id => i.id }%>
</td>

</tr>
<%end%>
</ul>
</tbody>
</table>
</div>
</div>
<div class="digg_pagination" align="right">
    <%= will_paginate @issue1, :container => false %>
</div>
</div>
</div>
</div>
