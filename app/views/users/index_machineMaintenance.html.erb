<div class="bod">
  <div class="col-md-10 col-sm-8 body-wrap">
<div class="body-container">
<div class="body-header">
        Machine Maintenance Summary
         <div class="add">
		<%if not admin?%>
<%= link_to users_machine_maintenance_path, class: "btn btn-default",:title => 'Add', :rel => 'tooltip' do%>
<i class="fa fa-plus"></i><%end%>
<%end%>
	</div>
<br>
</div>
<div class="body-content">
<div class="table-container">
<div class="header">
    List of Machine Maintenance 
<div class="search"><%= form_tag(:action => "index_machineMaintenance", :method => 'get', id:"search-order") do %>
   <p> <span ><%= text_field_tag :search, params[:search],:placeholder=>"Machine No / Problem",:class=>"fa fa-search"%></span>
   <div class="bbtn">
    <%= submit_tag "Search",:class=>"btn btn-info btn-sm"%>
     <%= link_to "clear" ,users_index_machineMaintenance_path,:class=>"btn btn-info btn-sm"%>
    </div></p>
   <% end %></div>
</div>
<table class="table">
    <thead>
<tr>
<th>Machine No</th>
<th>Type of problem</th>
<th>Date</th>
<th>Spare name</th>
<th>Spare cost</th>
<%if false %>
<th>Created by</th>
<th>Updated by</th>
<%end%>
<th colspan="3"><center>Action</center></th>
</tr>
</thead>

<% if @machine_maintenance.blank? then %>
<table><th>No records to display</th></table>

<% else %>

<% @machine_maintenance.each do |i| %>
<tbody>
<tr class="odd">
<td><%= i.mach_no%></td>
<td><%= i.type_of_prob%></td>
<td><%= i.date%></td>
<td><%= i.spare_name%></td>
<td><%= i.spare_cost%></td>

<%if admin?%>
<td><%= link_to users_show_machine_path(:id => i.id), class: "btn btn-default",:title => 'Show' do%>
<i class="fa fa-eye"></i><%end%></td>
<%end%>

<%if factory?%>
<td><%= link_to users_show_machine_path(:id => i.id), class: "btn btn-default",:title => 'Show' do%>
<i class="fa fa-eye"></i><%end%></td>
<td><%= link_to users_edit_machine_path(:id => i.id), class: "btn btn-default",:title => 'Edit' do%>
<i class="fa fa-pencil"></i><%end%>
</td>
<td><%= link_to image_tag("/assets/trash1.png", height: '20', width: '20',:class=>"img-circle",:title => 'Delete', :rel => 'tooltip',:onclick=>"if (confirm('Are you sure!!!')) commentDelete(1); return false"),{:action => 'delete_machine', :id => i.id }%>
</td>
<%end%>

<%if operator?%>
<td><%= link_to users_show_machine_path(:id => i.id), class: "btn btn-default",:title => 'Show' do%>
<i class="fa fa-eye"></i><%end%></td>
<%unless i.updated_at <(Time.now- 7.day)%>
<td><%= link_to users_edit_machine_path(:id => i.id), class: "btn btn-default",:title => 'Edit' do%>
<i class="fa fa-pencil"></i><%end%>
</td>
<td><%= link_to image_tag("/assets/trash1.png", height: '20', width: '20',:class=>"img-circle",:title => 'Delete', :rel => 'tooltip',:onclick=>"if (confirm('Are you sure!!!')) commentDelete(1); return false"),{:action => 'delete_machine', :id => i.id }%>
</td>
<%end%>
<%end%>
</tr>
</tbody>
<% end %>
<%end%>
</table>
</div>
</div>
</div>
</div>

